extends layout

block content
  h1= title
  p Welcome to #{title}
  // Where all the magic happens
  // LOGIN FORM
  .text-center(style='padding:50px 0')
    .logo login
    // Main Form
    .login-form-1
      form#login-form.text-left
        .login-form-main-message
        .main-login-form
          .login-group
            .form-group
              label.sr-only(for='lg_username') Username
              input#lg_username.form-control(type='text', name='lg_username', placeholder='username')
            .form-group
              label.sr-only(for='lg_password') Password
              input#lg_password.form-control(type='password', name='lg_password', placeholder='password')
            .form-group.login-group-checkbox
              input#lg_remember(type='checkbox', name='lg_remember')
              label(for='lg_remember') remember
          button.login-button(type='submit')
            i.fa.fa-chevron-right
        .etc-login-form
          p
            | forgot your password?
            a(href='#') click here
          p
            | new user?
            a(href='#') create new account
    // end:Main Form
  // REGISTRATION FORM
  .text-center(style='padding:50px 0')
    .logo register
    // Main Form
    .login-form-1
      form#register-form.text-left
        .login-form-main-message
        .main-login-form
          .login-group
            .form-group
              label.sr-only(for='reg_username') Email address
              input#reg_username.form-control(type='text', name='reg_username', placeholder='username')
            .form-group
              label.sr-only(for='reg_password') Password
              input#reg_password.form-control(type='password', name='reg_password', placeholder='password')
            .form-group
              label.sr-only(for='reg_password_confirm') Password Confirm
              input#reg_password_confirm.form-control(type='password', name='reg_password_confirm', placeholder='confirm password')
            .form-group
              label.sr-only(for='reg_email') Email
              input#reg_email.form-control(type='text', name='reg_email', placeholder='email')
            .form-group
              label.sr-only(for='reg_fullname') Full Name
              input#reg_fullname.form-control(type='text', name='reg_fullname', placeholder='full name')
            .form-group.login-group-checkbox
              input#male(type='radio', name='reg_gender', placeholder='username')
              label(for='male') male
              input#female(type='radio', name='reg_gender', placeholder='username')
              label(for='female') female
            .form-group.login-group-checkbox
              input#reg_agree(type='checkbox', name='reg_agree')
              label(for='reg_agree')
                | i agree with
                a(href='#') terms
          button.login-button(type='submit')
            i.fa.fa-chevron-right
        .etc-login-form
          p
            | already have an account?
            a(href='#') login here
    // end:Main Form
  // FORGOT PASSWORD FORM
  .text-center(style='padding:50px 0')
    .logo forgot password
    // Main Form
    .login-form-1
      form#forgot-password-form.text-left
        .etc-login-form
          p
            | When you fill in your registered email address, you will be sent instructions on how to reset your password.
        .login-form-main-message
        .main-login-form
          .login-group
            .form-group
              label.sr-only(for='fp_email') Email address
              input#fp_email.form-control(type='text', name='fp_email', placeholder='email address')
          button.login-button(type='submit')
            i.fa.fa-chevron-right
        .etc-login-form
          p
            | already have an account?
            a(href='#') login here
          p
            | new user?
            a(href='#') create new account
    // end:Main Form
