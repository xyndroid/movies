extends layout

block content
  .container
    p movie["title"]
    p= test
    .row
      .container
        .col.col-lg-3
          | img(src='/images/' + movie["cover"], width='350')
        .col.col-lg-3
          .h3
            span movie['title']
          .h5
            span 'Release: ' + movie['rdate']
          .h5
            span= 'Language: ' + movie['language']
          .h5
            span= 'Length: ' + movie["duration"]
          .h5
            span= 'Rating: ' + movie["star"]
        .col.col-lg-6
          .h5
            span= movie["description"]
